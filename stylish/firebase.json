{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/product/**",
        "destination": "/product.html"
      },
      {
        "source": "/checkout",
        "destination": "/product.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
